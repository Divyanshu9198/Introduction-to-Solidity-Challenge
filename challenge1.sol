pragma solidity ^0.8.0;

contract SimpleContract {
    // Declare four different types of variables
    uint256 private number;
    string private text;
    address private wallet;
    bool private flag;
    
    // Function to set the value of the 'number' variable
    // and return the updated value
    function setNumber(uint256 _number) public returns (uint256) {
        number = _number;
        return number;
    }
    
    // Function to get the value of the 'number' variable
    function getNumber() public view returns (uint256) {
        return number;
    }
    
    // Function to set the value of the 'text' variable
    // and return the updated value
    function setText(string memory _text) public returns (string memory) {
        text = _text;
        return text;
    }
    
    // Function to get the value of the 'text' variable
    function getText() public view returns (string memory) {
        return text;
    }
    
    // Function to set the value of the 'wallet' variable
    // and return the updated value
    function setWallet(address _wallet) public returns (address) {
        wallet = _wallet;
        return wallet;
    }
    
    // Function to get the value of the 'wallet' variable
    function getWallet() public view returns (address) {
        return wallet;
    }
    
    // Function to set the value of the 'flag' variable
    // and return the updated value
    function setFlag(bool _flag) public returns (bool) {
        flag = _flag;
        return flag;
    }
    
    // Function to get the value of the 'flag' variable
    function getFlag() public view returns (bool) {
        return flag;
    }
}
